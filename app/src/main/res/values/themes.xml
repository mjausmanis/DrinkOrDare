<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrinkOrDare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A19A94</item>
       <item name="colorPrimaryVariant">@color/purple_700</item>
       <item name="colorOnPrimary">@color/white</item>
       <!-- Secondary brand color. -->
        <item name="colorSecondary">#A19A94</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#3C3532</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#8071A2</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light Mode -->
    <!-- Screen Background if Light Mode on -->
    <style name="BACKGROUND">
        <item name="android:background">#FFEBA4</item>
    </style>
    <!-- Text Background if Light Mode on -->
    <style name="TEXT">
        <item name="android:textColor">#3C3532</item>
    </style>
    <!-- Button Background if Light Mode on -->
    <style name="BUTTON">
        <item name="android:background">#A19A94</item>
        <item name="android:textColor">#3C3532</item>
    </style>
    <style name="SWITCH">
        <item name="android:textColor">#3C3532</item>
    </style>
    <style name="CHECKBOX">
        <item name="android:textColor">#3C3532</item>
    </style>
    



    <style name="Theme.DrinkOrDare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DrinkOrDare.Splash" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/champagne</item>
    </style>
    <style name="Theme.DrinkOrDare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DrinkOrDare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>