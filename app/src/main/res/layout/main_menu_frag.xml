<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/BACKGROUND"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="317dp"
        android:layout_height="437dp"
        android:layout_marginBottom="300dp"
        android:accessibilityLiveRegion="none"
        android:src="@drawable/flaming_coctail"
        android:tint="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="166dp"
        android:layout_height="375dp"
        android:layout_marginEnd="250dp"
        android:rotation="-25"
        android:src="@drawable/champagne"
        android:tint="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="328dp"
        android:layout_height="471dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="330dp"
        android:rotation="25"
        android:src="@drawable/beer"
        android:tint="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playGameButton"
        style="@style/BUTTON"
        android:background="@drawable/rounded_corner"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/play_game"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToCustQuest"
        style="@style/BUTTON"
        android:background="@drawable/rounded_corner"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginTop="350dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/custom_quest_label"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/BUTTON"
        android:background="@drawable/rounded_corner"
        android:id="@+id/goToSetting"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#A19A94"
        android:fontFamily="sans-serif-black"
        android:text="@string/options_label"
        android:textAllCaps="true"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        style="@style/TEXT"
        android:id="@+id/gameScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-540dp"
        android:fontFamily="@font/berkshire_swash"
        android:hint="@string/app_name"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        tools:visibility="visible" />




</androidx.constraintlayout.widget.ConstraintLayout>